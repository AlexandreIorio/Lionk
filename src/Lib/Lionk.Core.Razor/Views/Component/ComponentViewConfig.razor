@using Lionk.Core.Component
@using IComponent = Lionk.Core.Component.IComponent
@using MudBlazor
@namespace Lionk.Core.View
@attribute [ViewOfAttribute("Component base configuration", typeof(IComponent), typeof(ComponentView), ViewContext.Configuration)]

<MudText Typo="Typo.subtitle2">Component Id: @id.ToString() </MudText>
<MudTextField @bind-Value="_instanceName" Label="Component name" T="string" />

@code {
    [Parameter] public IComponent? Component { get; set; }

    private Guid id => Component?.Id ?? Guid.Empty;

    private string _instanceName
    {
        get
        {
            if (Component is null) return string.Empty;
            return Component.InstanceName;
        }
        set
        {
            if (Component is null) return;
            Component.InstanceName = value;
        }
    }
}