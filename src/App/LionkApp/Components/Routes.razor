@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavManager

<CascadingAuthenticationState>
    <Router AppAssembly="typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeView>
                <Authorized>
                    <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)" />
                </Authorized>
                <NotAuthorized>
                    @if (!NavManager.Uri.Contains("/auth"))
                    {
                        <LayoutView Layout="typeof(Layout.UnauthorizedLayout)">
                            <LionkApp.Components.Pages.Unauthorized />
                        </LayoutView>
                    } else
                    {
                        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.SecondaryLayout)" />
                    }
                </NotAuthorized>
            </AuthorizeView>
            <FocusOnNavigate RouteData="routeData" Selector="h1" />
        </Found>
    </Router>
</CascadingAuthenticationState>

