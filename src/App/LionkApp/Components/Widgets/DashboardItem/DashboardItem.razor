@inherits MudItem

<MudItem xs="@xs" sm="@sm" md="@md" lg="@lg" xl="@xl">
    <MudPaper Class="pa-4" Style="position: relative; height:200px">
        <MudIconButton Icon="@Icons.Material.Filled.Settings"
                       Size="Size.Small"
                       Style="position: absolute; top: 5px; right: 5px;"
                       OnClick="ConfigurationClicked" />
        @if(ChildContent is not null) @ChildContent
    </MudPaper>
</MudItem>


@code {
    [Parameter] public EventCallback ConfigurationClicked { get; set; }
}
