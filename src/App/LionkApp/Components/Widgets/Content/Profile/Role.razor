    private string? selectedRole;
    private List<string> availableRoles = new List<string> { "Admin", "User", "Moderator" };

    protected override void OnInitialized()
    {
        Users = userService.GetUsers();
    }

    private void AddRole(User user)
    {
        if (!string.IsNullOrEmpty(selectedRole) && !user.Roles.Contains(selectedRole))
        {
            user.AddRole(selectedRole);
        }
    }

    private void RemoveRole(User user, string role)
    {
        user.RemoveRole(role);
