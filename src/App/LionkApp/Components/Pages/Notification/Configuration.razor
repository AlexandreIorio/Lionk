    public void Dispose()
    {
        foreach (var notifier in Notifiers.ToList())
        {
            NotificationService.RemoveNotifier(notifier);
        }

        foreach (var channel in Channels.ToList())
        {
            NotificationService.RemoveChannel(channel);
        }
    }
}
