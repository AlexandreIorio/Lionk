@page "/"
@inject ISnackbar Snackbar
@inject ICyclicExecutorService CyclicExecutorService
@inject IComponentService ComponentService
@inject IDialogService DialogService
@using Lionk.Core.Component
@using Lionk.Utils;
@using LionkApp.Components.Widgets.Buttons

<PageTitle>Dashboard</PageTitle>
<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">

    @if (_widgets != null)
    {
        @foreach (Widget widget in _widgets)
        {
            Dictionary<string, object> parameters = new();
            if (widget.Component is not null)
            {
                Type view = widget.GetType();
                parameters.Add("ComponentParameter", widget.Component);
                <DashboardItem View="view" Parameters="parameters" />
            }
        }
    }

</MudContainer>

<FloatingButton NewWidgetAvailable="Refresh" />

@code {
    private List<Widget>? _widgets;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        _widgets = ComponentService.GetInstancesOfType<Widget>().ToList();
    }

    private void Refresh()
    {
        StateHasChanged();
    }

}

